/* pages/admin/admin.wxss */
page{
  background-color:#FFFAF0;
}
.page-all{
  display: flex;
  flex-direction: column ;
  height: 95%;
  width: 100%;
}
text{
  font-size: 10;
  font-weight:bold;
  color: #1E90FF;
}
.lunbo{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.swiper{
  margin-bottom:50rpx; 
  height: 300rpx;
  border-radius: 30rpx;
  width:70%;
  margin-left: 15%;
  margin-top:20%;
}
.tap-hover {
  opacity: 0.9;
  background: #FF0000;
}
.bg{
  position: absolute;
  z-index: -1;
  width:100%;
  height: 100%;
}
.info{
  width: 90%;
  height: 200rpx;
  border-radius: 15rpx;
  margin-top: 100rpx;
  margin-left:5%;
  margin-bottom: 10%;
  box-shadow:2px 2px 4px 2px #DDDDDD;
  background-color: ivory;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-items: stretch; 
  width:90%;
  left: 5%;
  margin-left:5%;
  margin-top: 10%;
  height: fit-content;
  border-radius: 40rpx;
  box-shadow:0px 2px 4px 2px #DDDDDD;
}
.backpic{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}