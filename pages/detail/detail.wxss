}
/* 弹幕 */
.talkbubble {
  width: 650rpx;
  height: 100rpx;
  background: white;
  position: relative;
  -moz-border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  border-radius: 10px;
  left:8%;
  margin-bottom: 5%;
  box-shadow:2px 2px 4px 2px #DDDDDD;
}
.talkbubble:before {
  content: "";
  position: absolute;
  right: 100%;
  top: 30rpx;
  width: 0;
  height: 0;
  border-top: 13rpx solid transparent;
  border-right: 26rpx solid white;
  border-bottom: 13rpx solid transparent;
}
.talkbubble text{
  position: absolute;
  margin-left: 2%;
  color:#45e2ad;
}
.input{
  width: 50rpx;
  height: 50rpx;
  margin-top: -3.5%;
  right: 5%;
  position: fixed;
}
.input1{
